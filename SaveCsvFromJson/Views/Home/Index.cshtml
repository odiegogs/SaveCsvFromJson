@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Salvar CSV a partir de Json</h1>
</div>

@using (Html.BeginForm("GerarCSV","CSVFromJson", FormMethod.Post )) 
{
    <div class="col-lg-12 align-content-center">
        <div class="form-group">            
           <label class="form-label" for="textareatxtjson">Informe o Json não aninhado abaixo:</label>                  
           <textarea id="txtjson" name="txtjson" rows="3" class="form-control"></textarea>                      
           <br/>
           <label class="form-label" for="retorno" style="color:red"> @ViewBag.jsonvalido</label> 
           <input type="submit" class="btn btn-primary" value="Converter Json para CSV" id="converterjson" />
           <input type='reset' value='Limpar formulário'/>
        </div>        
    </div>

 
}
